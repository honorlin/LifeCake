<%= simple_form_for @life do |f| %>
  <div class="container">
    <div class='col-md-5'>
      <div class="form-group">
          開始
          <div class='input-group date'  id= "life_start_time">
              <input type='text' class="form-control" name='life[start_time]'/>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
    </div>
    <div class='col-md-5'>
      <div class="form-group">
          結束
          <div class='input-group date'  id="life_end_time">
              <input type='text' class="form-control" name='life[end_time]'/>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
    </div>
  </div>
  <div class="container">
    <%= f.input :description, placeholder: '在做什麼事情呢？', label: "忙什？" %>
    <%= f.input :location, placeholder: '在那裡做呢?', label: "地點" %>
    <%= f.input :companion, placeholder: '和誰呢?', label: "夥伴" %>
    <%= f.input :tags_all, placeholder: '可以怎麼識別呢?', label: "標籤" %>
  </div> 
  <div class="container">
    <div class="form-group">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>

<% @tags.each do |tag| %>
  <button class="btn btn-default quick_tag" type="button"><%= tag.name %></button>
<% end %>
<script>
  $(".quick_tag").click(function(){
    var tags_all = $("#life_tags_all").val();
    var new_tag = $(this).text();
    if (tags_all.indexOf(new_tag) < 0){
      $("#life_tags_all").val(tags_all + " " + new_tag)  
    }    
  })   
</script>

